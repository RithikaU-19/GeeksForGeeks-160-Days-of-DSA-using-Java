class Solution {
    public int maximumProfit(int prices[]) {
        int profit=0,i=0,n=prices.length;
        while(i<n-1){
        while(i<n-1&&prices[i]>=prices[i+1]){
                i++;
        }
        int valley=prices[i];
        while(i<n-1&&prices[i]<=prices[i+1]){
            i++;
        }
        int peak=prices[i];
        profit+=peak-valley;
        
    }
    return profit;
}
}
